<odoo>
    <record id="l10n_co_bases_section_management" model="ir.ui.view">
        <field name="name">Config for l10n_co_bases section management</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block">
                    <h2>Section management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label string="Section management"/>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Show comment invoice format" class="col-md-3 o_light_label"/>
                                        <field name="comment_text_with_format"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>