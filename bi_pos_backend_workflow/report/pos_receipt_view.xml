<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="receipt_backend">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">

					<div class="page">

						<t t-if='doc.company_id.logo'>
							<img style="display: block;margin-left: auto;margin-right: auto;" t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)" height="70" border="1" width="70"/>
							<br/>
						</t>
						<div class="text-center">
							<div  style="text-align:center;">
								<t t-esc='doc.company_id.name'/>
							</div>
							<div  style="text-align:center;">
								Tel: <t t-esc='doc.company_id.phone'/>
							</div>
							<div style="text-align:center;">
								<t t-esc='doc.company_id.email'/>
							</div>
							<div style="text-align:center;">
								<t t-esc='doc.company_id.website'/>
							</div>
							<div style="text-align:center;">------------------</div>				
							<div style="text-align:center;">
								Served by <t t-esc='doc.user_id.name'/>
							</div>
							<br/>	
						</div>
						<table>
							<tr t-foreach='doc.lines' t-as='line'>
								<td class="text-left" width="100%">
									<span t-field='line.product_id'/><br/>
										<span t-if='line.discount != 0'>
											<div class="text-left" style="color:black">
												With a <t t-esc='line.discount' />% Discount
											</div>
										</span>
								</td>
								<div style="text-align:right">
									<td width="100%">
										<span t-field='line.price_unit' />
									</td>
								</div>			
							</tr>
					    </table>		

						<br/>
						<div style="text-align:right">-------------</div>
							<div width="100%">
								<span class="text-align : center;">Subtotal:</span><span t-esc='abs(doc.amount_total)' style="float : right;"/>
							</div>
							<div width="100%">
								<span class="text-center">Tax:</span><span t-esc='abs(doc.amount_tax)' style="float:right;"/>

							</div>
						</div>	
						<div style="text-align:right">-------------</div>
						<div class="text-center" style="text-align:center;">
							<span style="font-size:24px;">Total:</span><span t-esc='abs(doc.amount_total)' style="float:right; font-size:24px;"/>
					    </div>		

						<br/>
						<table class="table table-sm" width="100%">
							<tbody>
								<tr t-foreach='doc.payment_ids' t-as='pay'>
									<td t-if="pay.amount &lt;= 0">
										<div class="text-center" style="text-align:center;">
							              <span style="font-size:24px;">Change:</span><span t-esc='abs(pay.amount)' style="float:right; font-size:24px;"/>
					                   </div>	
									</td>
									<td t-else="">
										<span class="text-left"><t t-esc='pay.payment_method_id.name'/></span>
										<span t-esc='abs(pay.amount)' style="float:right;"/>
									</td>
								</tr>
							</tbody>
						</table>

						
						<br/>
						<div class="text-center">
							<div style="text-align:center;" >
								<t t-esc='doc.name'/>
							</div>
							<div style="text-align:center;" >
								<t t-esc='doc.date_order'/>
							</div>
							<div style="text-align:center;">
								<t t-esc='doc.pos_reference'/>
							</div>	
						</div>			
				</t>
			</t>
		</template>

	</data>

</odoo>
