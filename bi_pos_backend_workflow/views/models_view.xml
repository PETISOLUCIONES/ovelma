<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<record model="ir.ui.view" id="create_session_tree_inherit">
			<field name="name">create.session.tree.inherit</field>
			<field name="model">pos.order</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>  
			<field name="arch" type="xml">
				<tree position="attributes">
					<attribute name="create">1</attribute>
				</tree>
			</field>
		</record>


		<record model="ir.ui.view" id="create_session_view_inherit">
			<field name="name">create.session.view.inherit</field>
			<field name="model">pos.order</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>  
			<field name="arch" type="xml">
				<xpath expr="//form" position='attributes'>
					<attribute name="create">1</attribute>
				</xpath>

			</field>
		</record>


		<record id="create_invoice_view_form" model="ir.ui.view">
			<field name="name">create.invoice.view.form</field>
			<field name="model">pos.order</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>  
			<field name="arch" type="xml">
			   <xpath expr="/form/header/button[@name='refund']" position="after">
					<button name= "print_receipt" string ="Print Receipt" type="object" />
			   </xpath>

			</field>     
		</record>


		<record id="view_product_form_inherit" model="ir.ui.view">
			<field name="name">view.product.form.inherit</field>
			<field name="model">pos.order</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
			<field name="arch" type="xml">
				<data>
					<field name="full_product_name" position="replace">
						<field name="product_id" />
					</field>
				</data>
			</field>
		</record>		

	</data>
</odoo>
