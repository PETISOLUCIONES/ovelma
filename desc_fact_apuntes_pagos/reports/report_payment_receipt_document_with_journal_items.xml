                <t t-if="o.move_line_ids">
                    <br/>
                    <h6><span>Apuntes Contables<br/></span></h6>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th><span>Asiento contable</span></th>
                                <th><span>Cuenta</span></th>
                                <th><span>Descripci√≥n</span></th>
