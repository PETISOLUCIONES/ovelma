                <option t-att-value="'42'"
                        t-att-selected="props.partner.vat_type ? ((props.partner.vat_type === '42') ? true : undefined) : undefined">42 - Documento de identificación extranjero</option>
                <option t-att-value="'43'"
                        t-att-selected="props.partner.vat_type ? ((props.partner.vat_type === '43') ? true : undefined) : undefined">43 - Sin identificación del exterior o para uso definido por la DIAN</option>
                </select>

        </xpath>
    </t>
</templates>