                        <t t-foreach="env.pos.identification_type" t-as="type" t-key="type.id">
                            <option t-att-value="type.id"
                                    t-att-selected="props.partner.l10n_latam_identification_type_id ? ((type.id === props.partner.l10n_latam_identification_type_id[0]) ? true : undefined) : undefined">
                                <t t-esc="type.name" />
                            </option>
                        </t>
                </select>

            </div>
            <select name="vat_type" id="vat_type" t-attf-class="hidden-element detail" t-on-change="captureChange">
                    <option value="">None</option>
                <option t-att-value="'11'"
                        t-att-selected="props.partner.vat_type ? ((props.partner.vat_type === '11') ? true : undefined) : undefined">11 - Registro Civil</option>
                <option t-att-value="'12'"
                        t-att-selected="props.partner.vat_type ? ((props.partner.vat_type === '12') ? true : undefined) : undefined">12 - Tarjeta de identidad </option>
