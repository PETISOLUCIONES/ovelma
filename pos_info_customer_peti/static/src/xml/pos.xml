<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_customer_template_peti" inherit_id="point_of_sale.template" xml:space="preserve">
    <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">

        <xpath expr="//input[hasclass('client-name')]" position="replace">
            <input class="detail client-name uppercase" name="name" t-att-value="props.partner.name or ''"
                   placeholder="Name" t-on-change="captureChange" t-attf-class="{{props.partner.company_type == 'person' ? 'hidden-element' : ''}}"/>
        </xpath>

        <xpath expr="//input[hasclass('client-name')]" position="after">
            <div class='client-names' t-attf-class="{{props.partner.company_type != 'person' ? 'hidden-element' : ''}}">
                <input t-attf-class="{{props.partner.company_type != 'person' ? 'detail hidden-element uppercase' : 'detail uppercase'}}" name='firstname' type='text'
                       placeholder="Primer Nombre" t-on-change="captureChange"
                       t-att-value='props.partner.firstname || ""'/>
                <input t-attf-class="{{props.partner.company_type != 'person' ? 'detail hidden-element uppercase' : 'detail uppercase'}}" name='other_name' type='text'
                       placeholder="Segundo Nombre" t-on-change="captureChange"
                       t-att-value='props.partner.other_name || ""'/>
                <input t-attf-class="{{props.partner.company_type != 'person' ? 'detail hidden-element uppercase' : 'detail uppercase'}}" name='lastname' type='text' placeholder="Primer Apellido"
                       t-att-value='props.partner.lastname || ""' t-on-change="captureChange"/>
                <input t-attf-class="{{props.partner.company_type != 'person' ? 'detail hidden-element uppercase' : 'detail uppercase'}}" style="text-transform: uppercase" name='other_lastname' type='text'
                       placeholder="Segundo Apellido"
                       t-att-value='props.partner.other_lastname || ""' t-on-change="captureChange"/>
            </div>
            <div class="client-detail">
                 <span class='label'>Tipo de cliente</span>
                 <select name="company_type" id="company_type" class="detail" t-on-change="captureChange">
                        <option value="">None</option>
                     <option t-att-value="'person'"
                             t-att-selected="props.partner.company_type ? ((props.partner.company_type === 'person') ? true : undefined) : undefined">Individual</option>
                     <option t-att-value="'company'"
                             t-att-selected="props.partner.company_type ? ((props.partner.company_type === 'company') ? true : undefined) : undefined">Compañia</option>
                    </select>
             </div>
        </xpath>

