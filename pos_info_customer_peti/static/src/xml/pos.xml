        <xpath expr="//input[hasclass('vat')]" position="inside">
            <input class='detail' name='vat_num' type='number' t-att-value='props.partner.vat_num || ""' t-on-change="captureChange"/>
            <input class='detail hidden-element' name='vat' type='text' t-att-value='props.partner.vat || ""' t-on-change="captureChange"/>
        </xpath>
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class='client-detail' id="cumpleaños" t-attf-class="{{props.partner.company_type != 'person' ? 'hidden-element' : ''}}">
                <span class='label'>Fecha de nacimiento</span>
                <input class='detail' name='xbirthday' type='date' t-on-change="captureChange"
                       t-att-value='props.partner.xbirthday || ""'/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('client-details-right')]" position="inside">
            <div class='client-detail' id="vat_vd">
                <span class='label'>DV</span>
                <input class='detail' name='vat_vd' type='number' placeholder="Digito de verificación" readonly="True"
                       t-att-value='props.partner.vat_vd || ""' t-on-change="captureChange"/>
            </div>
